{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2021",
      "DOM"
    ],
    "jsx": "react",
    "baseUrl": "../",
    "paths": {
      "@renderer/*": [
        "src/renderer/*"
      ],
      "@main/*": [
        "src/main/*"
      ],
      "@event/*": [
        "src/common/event/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "include": [
    "../src/**/*.ts*",
    "./",
    "../global.d.ts"
  ]
}