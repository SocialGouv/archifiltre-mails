{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "incremental": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react",
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "@event/*": [
        "src/common/lib/event/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "include": [
    "global.d.ts",
    "types/**/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "tests",
    "./node_modules/"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
    "transpileOnly": true,
    "files": true
  }
}