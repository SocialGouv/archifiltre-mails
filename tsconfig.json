{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "DOM"
    ],
    "incremental": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react",
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "@event/*": [
        "src/common/event/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "include": [
    "global.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "tests",
    "./node_modules/"
  ]
}