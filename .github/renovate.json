{
  "enabled": true,
  "extends": ["github>SocialGouv/renovate-config:light"],
  "baseBranches": ["dev"],
  "dependencyDashboardLabels": ["bot", "dependencies"],
  "updatePinnedDependencies": false,
  "packageRules": [
    {
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "<15"
    },
    {
      "matchPackageNames": ["webpack", "@types/webpack"],
      "allowedVersions": "<5"
    },
    {
      "matchPackageNames": ["sass-loader"],
      "allowedVersions": "<11"
    },
    {
      "matchPackageNames": ["@types/node"],
      "allowedVersions": "<15"
    },
    {
      "matchPackageNames": ["eslint"],
      "allowedVersions": "<8"
    }
  ]
}
