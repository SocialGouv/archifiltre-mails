{
  "enabled": true,
  "extends": [
    "github>SocialGouv/renovate-config:light"
  ],
  "baseBranches": [
    "dev"
  ],
  "dependencyDashboardLabels": [
    "bot",
    "dependencies"
  ],
  "updatePinnedDependencies": false,
  "packageRules": [
    {
      "matchPackageNames": [
        "webpack",
        "@types/webpack"
      ],
      "allowedVersions": "<5"
    },
    {
      "matchPackageNames": [
        "sass-loader"
      ],
      "allowedVersions": "<11"
    },
    {
      "matchPackageNames": [
        "@types/node"
      ],
      "allowedVersions": "<15"
    }
  ]
}